#include<stdio.h>//standard input output condition// 

  

int fact(int); //factorial function// 

int main() //main function// 

  

{ 

    int n,f;//declaring the integer// 

    printf("Enter the number whose factorial you want to calculate\n"); 

    scanf("%d",&n); 

    f=fact(n); 

    printf("factorial=%d",f); 

} 

  

int fact(int n) 

 { 

if (n==0) 

  

    { 

        return 0; 

    } 

    else if(n==1) 

    { 

        return 1; 

    } 

    else 

    { 

        return n*fact(n-1); 

    } 

  

} 
